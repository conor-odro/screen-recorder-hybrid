{
  "name": "Screen Recorder Hybrid",
  "description": "Hybrid of Screenity and Screen-recorder",
  "offline_enabled": true,
  "version": "1.0.0",
  "manifest_version": 2,
  "default_locale": "en",
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "<all_urls>","activeTab", "tabCapture", "tabs", "downloads", "storage", "identity", "https://www.googleapis.com/*"
  ],
  "web_accessible_resources": ["html/*", "js/*", "css/*", "assets/images/*"]
}
